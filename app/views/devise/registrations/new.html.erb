<div class="row">
  <div class="col-sm-6 col-sm-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Plan</h1>
      <p>Sign up for pro with 5$/month only and get full access to the developer community, includes full profile access to the developers page and much more!</p>
    <% else %>
      <h1>Basic Plan</h1>
      <p>Sign up for free and get basic access to the developer community.</p>
    <% end %>
  </div>
  <div class="col-sm-6 col-sm-offset-3 well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
         <%= render "pro_form" %>
      <% else %>
         <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    
  </div>  
</div>
